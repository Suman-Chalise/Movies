@model List<Category>

<div class=" container">
		<div class="row">
		 <div class="col-6">
			<h2> List of movies </h2>

		 </div>

			
		<div class="col-6">
			<a class="btn btn-primary float-end" asp-action="Add">Add a category</a>
		</div>
	
			
		</div>
	</div>


<div class=" container">

		<table class="table">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Actions</th>
					

				</tr>

			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.CategoryId</td>

						<td>@item.Name</td>

						<td>
							<a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
							<a class="btn btn-danger" asp-action="Delete" asp-route-id = "@item.CategoryId">Delete</a>
						</td>
						
					</tr>

				}


			</tbody>
		</table>

</div>

