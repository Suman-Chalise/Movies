@model Category


<div class=" container">
	<div class="row">
		<div class="col-6">
			<h2>Edit a Movie category</h2>

		</div>


		<div class="col-6">
			<a class="btn btn-primary float-end" asp-action="Index">Back To Index</a>
		</div>


	</div>
</div>

<div class="container">

	<form method="post">
		<input asp-for="CategoryId" hidden/>

		<div class="col-6">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>

		</div>



		<button class="btn btn-primary mt-2" type="submit">Submit</button>

	</form>

</div>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}