@model IEnumerable<Movie>

<div class="row pb-3">

	@foreach (var product in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class=" row p-2">
				<div class="col-12 p-1">
					<div class="card border-0 p-3 shadow border-5 rounded">


						<img src="@product.Image" class="card-img-top rounded" />
						<div class="card-body pb-0">
							<div class="pl-1">
								<p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
								<p class="card-title text-warning text-center">by <b>@product.Director</b></p>

								<p class="card-title text-dark text-center"><b>@product.Cast</b></p>
							</div>
							<div class="pl-1">
								<p class="text-dark text-opacity-75 text-center mb-0">Price: <span class="text-decoration-line-through">@product.Price.ToString("c");</span></p>

							</div>
						@* 	<div class="pl-1">
								<p class="text-dark text-opacity-75 text-center">As low as: <span>@product.Price100.ToString("c");</span></p>

							</div> *@

						</div>
						<a asp-action="Details" asp-controller="Home" asp-route-id="@product.MovieId" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
					</div>


				</div>
			</div>

		</div>
	}
</div>